<Application x:Class="TurtleGraphics.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TurtleGraphics.XAML.Converters"
             StartupUri="XAML/MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="StylesDict.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<Style TargetType="ListBoxItem" x:Key="SeamlessNoHighlight">
				<Setter Property="Padding" Value="0,1"/>
				<Setter Property="Margin" Value="0,2"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="ListBoxItem">
							<ContentPresenter/>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<SolidColorBrush x:Key="mainColor" Color="#ffaaaab0"/>
			<converters:CoordinateConverter x:Key="CoordConv"></converters:CoordinateConverter>
			<converters:AngleConverter x:Key="AngleConv"></converters:AngleConverter>
		</ResourceDictionary>
	</Application.Resources>
</Application>
